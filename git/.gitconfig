[user]
    name = Ho-Yon Mak
    email = hoyon.mak@gmail.com
[alias]
    st = status
    co = checkout
    hist = log --abbrev-commit --decorate --format=format:'%C(bold yellow)%h%C(reset) %C(bold green)(%ar)%C(reset) %s%C(reset) %C(white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    graph = hist --graph --all
[push]
    default = simple
[github]
    user = hoyon
[pull]
    rebase = false
[diff]
    renameLimit = 10000
    colorMoved = default
[init]
    defaultBranch = main
[core]
    pager = delta
    fsmonitor = true

[delta]
    light = true
    file-style = yellow
    hunk-header-style = line-number syntax

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false